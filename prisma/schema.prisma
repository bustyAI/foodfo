generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  name   String
  email  String  @unique
  pantry Pantry?
}

model Pantry {
  id          Int     @id @default(autoincrement())
  name        String?
  userId      Int     @unique
  total       Float   @default(0.0)
  pantryItems Food[]
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Food {
  id       Int           @id @default(autoincrement())
  name     String
  pantryId Int
  price    Float
  quantity Int           @default(1)
  category FoodCategory?
  expDate    DateTime?       @default("1998-06-03T00:00:00.000Z")
  pantry   Pantry        @relation(fields: [pantryId], references: [id], onDelete: Cascade)
}

enum FoodCategory {
  vegetables
  fruits
  dairy
  meat
  seafood
  grainsAndCereal
  legumesAnduts
  snacksAndSweets
  beverages
  spicesAndCondiments
  frozenAndPrepared
  cannedAndPackaged
}
