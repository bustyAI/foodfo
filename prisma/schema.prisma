generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FoodCategory {
  vegetables
  fruits
  dairy
  meat
  seafood
  grainsAndCereal
  legumesAnduts
  snacksAndSweets
  beverages
  spicesAndCondiments
  frozenAndPrepared
  cannedAndPackaged
}


model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  pantries      Pantry[]  // Allowing multiple pantries per user
}

model Pantry {
  id            Int      @id @default(autoincrement())
  name          String
  total         Float    @default(0.0)
  userId        Int
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  pantryItems   Food[]
}

model Food {
  id            Int          @id @default(autoincrement())
  name          String
  category      FoodCategory?
  expDate       DateTime?
  price         Float
  quantity      Int          @default(1)
  pantryId      Int
  pantry        Pantry       @relation(fields: [pantryId], references: [id], onDelete: Cascade)
}